<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/imageCoverArt"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:paddingTop="15dp"
            app:srcCompat="@drawable/boris_cover_id0001"
            android:contentDescription="@string/imageviewcoverurl" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/elapsedTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_00"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white" />
            <SeekBar
                android:id="@+id/songPositionBar"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/white"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/totalTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_8_59"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/play_background">

            <Button
                android:id="@+id/previousBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_rewind_button"
                android:layout_marginRight="10dp" />
            <Button
                android:id="@+id/playBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_play_button" />

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_fast_forward_button"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/artistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:text="@string/artist"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/songName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:text="@string/song"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"/>

</LinearLayout>