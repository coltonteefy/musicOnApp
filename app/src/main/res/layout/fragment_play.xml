<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="358dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            app:srcCompat="@drawable/boris_cover_id0001" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/play_background">

        <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:text="Boris Brejcha"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/artistName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-50dp"
            android:text="Purple Noise"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/songPositionBar"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:progressBackgroundTint="@color/white" />

        <TextView
            android:id="@+id/elapsedTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/songPositionBar"
            android:layout_alignStart="@+id/songPositionBar"
            android:layout_below="@+id/songPositionBar"
            android:text="0:00"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/totalTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/songPositionBar"
            android:layout_alignRight="@+id/songPositionBar"
            android:layout_below="@+id/songPositionBar"
            android:text="8:59"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/playBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:background="@drawable/ic_play_button" />

        <Button
            android:id="@+id/previousBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/playBtn"
            android:layout_toLeftOf="@+id/songName"
            android:layout_toStartOf="@+id/songName"
            android:background="@drawable/ic_rewind_button" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/playBtn"
            android:layout_toEndOf="@+id/songName"
            android:layout_toRightOf="@+id/songName"
            android:background="@drawable/ic_fast_forward_button" />

    </RelativeLayout>
</RelativeLayout>